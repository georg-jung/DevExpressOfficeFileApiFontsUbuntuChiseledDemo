<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Keep globalization enabled (your base image is "-extra" and should have ICU) -->
    <InvariantGlobalization>false</InvariantGlobalization>
  </PropertyGroup>

  <ItemGroup>
    <!-- Office File API umbrella package -->
    <PackageReference Include="DevExpress.Document.Processor" Version="25.2.4" />
    <!-- Skia drawing engine for non-Windows -->
    <PackageReference Include="DevExpress.Drawing.Skia" Version="25.2.4" />
    <PackageReference Include="SkiaSharp.NativeAssets.Linux.NoDependencies" Version="3.119.2" />
    <PackageReference Include="SkiaSharp.NativeAssets.Linux" Version="3.119.2" ExcludeAssets="runtime" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- Ensure these land in publish output -->
    <None Include="demo.docx" CopyToPublishDirectory="Always" />
    <None Include="*.ttf" CopyToPublishDirectory="Always" />
  </ItemGroup>

</Project>
